@model MobileAheresisAdmin.Models.Hospitals.HospitalModel
@{
    ViewData["Title"] = "Edit";
}




@{if (TempData["title"] != null)
    {


        <div class="toast"
             data-title=@TempData["title"].ToString()
             data-message='@TempData["message"].ToString()'
             data-type=@TempData["type"]>
        </div>


    }

    TempData["title"] = null;
    TempData["message"] = null;
    TempData["type"] = null;
}
<div class="row">

    <div class="col-md-12">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">Dashboard</a>
            </li>
            <li class="breadcrumb-item active"><a href="~/Hospital/Index">Hospital List</a></li>
            <li class="breadcrumb-item active">Edit Hospital</li>

        </ol>
    </div>

</div>
<form asp-action="Edit" method="post">

    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        // Bootstrap 2 = "alert-error", Bootstrap 3 and 4 = "alert-danger"
        <div asp-validation-summary="All" class="alert alert-danger alert-error">
            <a class="close" data-dismiss="alert">&times;</a>
        </div>
    }


    <div class="container-fluid ">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="row float-right">

                        <button type="submit" name="save" class="btn btn-primary btn-sm ">
                            <i class="icon-save mr-2"></i>
                            Save
                        </button>

                        @*<button type="submit" name="save-continue" class="btn btn-primary btn-sm ml-2 ">
                                <i class="icon-save mr-2"></i>
                                Save And Countinue
                            </button>*@


                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-1">
            <div class="col-md-12">

                <div class="card bg-white mb-3 font-weight-bold">

                    <div class="card-body">
                        <div class="card-title"></div>

                        <!--Customer Details -->


                        <div class="row">
                            <div class="col-md-2 text-right">
                                <label class="text-right text-darkenGray">Hospital Name</label>
                            </div>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <input asp-for="HospitalName" class="form-control s-12" type="text">
                                    <input asp-for="HospitalAddress.FirstName" class="form-control s-12" hidden type="text" value="--">
                                    <input asp-for="HospitalAddress.LastName" class="form-control s-12" type="text" value="--" hidden>
                                    <input asp-for="HospitalAddress.Email" class="form-control s-12" type="text" value="--" hidden>
                                    <span class="field-validation-valid text-danger" data-valmsg-for="HospitalName" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="col-md-1 text-right">
                                <label class="text-right text-darkenGray">Address</label>
                            </div>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <input asp-for="HospitalAddress.Address1" class="form-control s-12" type="text">
                                   
                                </div>
                            </div>

                        </div>

                        <div class="row mt-1">
                            <div class="col-md-2 text-right">
                                <label class="text-darkenGray">Contact Person</label>
                            </div>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <input asp-for="ContactPerson" class="form-control s-12 " type="text">
                                   
                                </div>
                            </div>
                            <div class="col-md-1 text-right">
                                <label class="text-darkenGray">Address2</label>
                            </div>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <input asp-for="HospitalAddress.Address2" class="form-control s-12 " type="text">
                                  
                                </div>
                            </div>

                        </div>



                        <div class="row  mt-1">
                            <div class="col-md-2 text-right">
                                <label class="text-darkenGray">Contact No.</label>
                            </div>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <input asp-for="HospitalAddress.PhoneNumber" class="form-control s-12 " type="text">
                                   
                                </div>
                            </div>
                            <div class="col-md-1 text-right">
                                <label class="text-darkenGray" asp-for="HospitalAddress.StateProvince">State</label>
                            </div>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <input asp-for="HospitalAddress.StateProvince" class="form-control s-12 " type="text">
                                </div>
                            </div>

                        </div>


                        <div class="row  mt-1">
                            <div class="col-md-2 text-right">

                            </div>
                            <div class="col-md-4">

                            </div>

                            <div class="col-md-1 text-right">
                                <label class="text-darkenGray">City</label>
                            </div>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <input asp-for="HospitalAddress.City" class="form-control s-12 " type="text">
                                    
                                </div>
                            </div>

                        </div>

                        <div class="row  mt-1">

                            <div class="col-md-2 text-right">

                            </div>
                            <div class="col-md-4">

                            </div>
                            <div class="col-md-1 text-right">
                                <label class="text-darkenGray">Zip Code</label>
                            </div>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <input asp-for="HospitalAddress.ZipPostalCode" class="form-control s-12 " type="text">
                                   
                                </div>
                            </div>
                        </div>



                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

